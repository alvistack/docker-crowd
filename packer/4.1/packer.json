{
    "builders": [
        {
            "type": "docker",
            "image": "ubuntu:20.04",
            "commit": true,
            "changes": [
                "ENV LANG en_US.UTF-8",
                "ENV LC_ALL en_US.UTF-8",
                "ENV SHELL /bin/bash",
                "ENV TZ UTC",
                "ENV CROWD_OWNER crowd",
                "ENV CROWD_GROUP crowd",
                "ENV CROWD_HOME /var/atlassian/application-data/crowd",
                "ENV CROWD_CATALINA /opt/atlassian/crowd",
                "ENV JVM_MINIMUM_MEMORY 2048m",
                "ENV JVM_MAXIMUM_MEMORY 2048m",
                "ENV CATALINA_CONNECTOR_PROXYNAME \"\"",
                "ENV CATALINA_CONNECTOR_PROXYPORT \"\"",
                "ENV CATALINA_CONNECTOR_SCHEME http",
                "ENV CATALINA_CONNECTOR_SECURE false",
                "ENV CATALINA_CONTEXT_PATH \"/\"",
                "ENV JVM_SUPPORT_RECOMMENDED_ARGS -Datlassian.plugins.enable.wait=300 -XX:+UnlockExperimentalVMOptions -XX:+UseContainerSupport -XX:+UseZGC",
                "ENV SESSION_TIMEOUT 300",
                "ENV PATH $PATH:$CROWD_CATALINA",
                "VOLUME $CROWD_HOME",
                "WORKDIR $CROWD_HOME",
                "EXPOSE 8020",
                "EXPOSE 8095",
                "ENTRYPOINT [\"catatonit\", \"-g\", \"--\", \"docker-entrypoint.sh\"]",
                "CMD [\"start_crowd.sh\", \"-fg\"]"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "set -ex",
                "groupadd -r crowd",
                "useradd -r -g crowd -d /var/atlassian/application-data/crowd -M -s /usr/sbin/nologin crowd"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "set -ex",
                "apt-get update",
                "DEBIAN_FRONTEND=noninteractive apt-get install -y language-pack-en locales",
                "localedef -i en_US -c -f UTF-8 en_US.UTF-8",
                "rm -rf /var/lib/apt/lists/*"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "set -ex",
                "apt-get update",
                "DEBIAN_FRONTEND=noninteractive apt-get install -y systemd",
                "ln -fs /lib/systemd/systemd /usr/sbin/init",
                "rm -f /etc/systemd/system/*.wants/*",
                "rm -f /lib/systemd/system/basic.target.wants/*",
                "rm -f /lib/systemd/system/local-fs.target.wants/*",
                "rm -f /lib/systemd/system/multi-user.target.wants/*",
                "rm -f /lib/systemd/system/sockets.target.wants/*initctl*",
                "rm -f /lib/systemd/system/sockets.target.wants/*udev*",
                "rm -f /lib/systemd/system/sysinit.target.wants/systemd-tmpfiles-setup.service",
                "rm -rf /var/lib/apt/lists/*"
            ]
        },
        {
            "type": "ansible",
            "playbook_file": "./packer.yml",
            "inventory_directory": "./",
            "galaxy_file": "./ansible-galaxy-requirements.yml"
        }
    ]
}
